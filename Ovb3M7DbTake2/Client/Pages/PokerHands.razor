                <RadzenDataGridColumn TItem="Ovb3M7Db.Server.Models.AppDb.PokerHand" Property="HeroPosition" Title="Hero Position">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ovb3M7Db.Server.Models.AppDb.PokerHand" Property="IsFlop" Title="Is Flop">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ovb3M7Db.Server.Models.AppDb.PokerHand" Property="IsTurn" Title="Is Turn">
