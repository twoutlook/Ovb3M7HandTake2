                <RadzenDataGridColumn TItem="Ovb3M7Db.Server.Models.AppDb.PokerHand" Property="TableInfo" Title="Table Info">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Ovb3M7Db.Server.Models.AppDb.PokerHand" Property="SeatCnt" Title="Seat Cnt">
